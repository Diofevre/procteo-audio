# Configuration VAD (Voice Activity Detection)
# Paramètres pour pyannote/voice-activity-detection

# Seuil de confiance pour détecter la parole
confidence_threshold: 0.5

# Durée minimale d'un segment de parole (en secondes)
min_duration_s: 0.5

# Gap maximum entre segments pour les fusionner (en secondes)
merge_gap_s: 0.3

# Marge autour de chaque segment (en secondes)
margin_s: 0.2

# Modèle Pyannote à utiliser
model: "pyannote/voice-activity-detection"

# Paramètres d'extraction audio (pour vidéos)
audio_extraction:
  sample_rate: 16000
  channels: 1  # mono
  format: "wav"
